@startuml
actor "Отдел кадров" as p
database "туры" as q
boundary "Система бронирования туров" as sys
p -> q : Поиск тура
q -> p : Возможные туры
p -> sys : Сбор данных для оформления документов
sys -> q : Данные от туроператора и клиента
q -> sys : Оформление договора
sys -> p : Подготовленная путевка
@enduml
